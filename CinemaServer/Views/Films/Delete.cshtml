@model CinemaServer.Models.FilmShow

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление киносеанса</h1>

<h3>Вы уверены что хотите удалить киносеанс</h3>
<div>
    <h4>Киносеанс</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FilmStartTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FilmStartTime)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку киносеансов</a>
    </form>
</div>
